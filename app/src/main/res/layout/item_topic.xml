<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        app:cardUseCompatPadding="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:background="@drawable/image_btn_bg"
            android:minHeight="60dp">

            <ImageView
                android:id="@+id/item_topic_icon"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="@drawable/default_image"
                android:scaleType="fitCenter" />

            <TextView
                android:id="@+id/item_topic_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@id/item_topic_icon"
                android:layout_toRightOf="@id/item_topic_icon"
                android:ellipsize="end"
                android:maxLines="2"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/item_topic_node"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_toEndOf="@id/item_topic_icon"
                android:layout_toRightOf="@id/item_topic_icon" />

            <TextView
                android:id="@+id/item_topic_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_toEndOf="@id/item_topic_node"
                android:layout_toRightOf="@id/item_topic_node"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/item_topic_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:textSize="16sp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>